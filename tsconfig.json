{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node", "webpack"],
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": ["./src/**/*"]
}
